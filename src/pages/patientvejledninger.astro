---
import BaseLayout from '../layouts/BaseLayout.astro';
import { i18n } from '../i18n';

const guides = i18n.patientGuides.guides;
---

<BaseLayout title={i18n.patientGuides.title} description={i18n.patientGuides.intro}>
  <section class="page-hero">
    <div class="container">
      <h1>{i18n.patientGuides.title}</h1>
      <p>{i18n.patientGuides.intro}</p>
    </div>
  </section>

  <section class="content">
    <div class="container">
      <div class="guides-intro">
        <div class="info-box">
          <h3>{i18n.ui.aboutBlockade}</h3>
          <p>{i18n.ui.aboutBlockadeText}</p>
        </div>
      </div>

      <div class="guides-grid">
        {Object.entries(guides).map(([key, guide]) => (
          <a href={`/patientvejledninger/${guide.slug}`} class="guide-card card card-link">
            <div class="guide-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
                <polyline points="10 9 9 9 8 9"></polyline>
              </svg>
            </div>
            <h3>{guide.title}</h3>
            <p>{guide.description}</p>
            <span class="read-more">{i18n.ui.readGuide} â†’</span>
          </a>
        ))}
      </div>

      <div class="contact-section">
        <h2>{i18n.ui.questionsTitle}</h2>
        <p>{i18n.ui.questionsAboutClinic}</p>
        <a href="/kontakt" class="btn btn-primary">{i18n.common.contactUs}</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .page-hero {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    color: var(--white);
    padding: 4rem 0;
  }

  .page-hero h1 {
    color: var(--white);
    margin-bottom: 1rem;
  }

  .page-hero p {
    opacity: 0.9;
    max-width: 600px;
    margin: 0;
  }

  .content {
    padding: 4rem 0;
  }

  .guides-intro {
    margin-bottom: 3rem;
  }

  .guides-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .guide-card {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .guide-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    background: rgba(26, 95, 122, 0.1);
    color: var(--primary);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .guide-card h3 {
    font-size: 1.1rem;
    margin: 0;
  }

  .guide-card p {
    font-size: 0.9rem;
    color: rgb(var(--gray));
    margin: 0;
    line-height: 1.5;
    flex-grow: 1;
  }

  .read-more {
    font-size: 0.9rem;
    color: var(--primary);
    font-weight: 500;
    margin-top: 0.5rem;
  }

  .contact-section {
    margin-top: 4rem;
    text-align: center;
    padding: 3rem;
    background: rgba(var(--gray-light), 0.5);
    border-radius: 12px;
  }

  .contact-section h2 {
    margin-bottom: 0.5rem;
  }

  .contact-section p {
    color: rgb(var(--gray));
    margin-bottom: 1.5rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (max-width: 1024px) {
    .guides-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .guides-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
