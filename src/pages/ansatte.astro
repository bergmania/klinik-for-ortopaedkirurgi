---
import BaseLayout from '../layouts/BaseLayout.astro';
import { i18n } from '../i18n';

const staff = i18n.staff;
---

<BaseLayout title={staff.title} description={i18n.ui.staffDescription}>
  <section class="page-hero">
    <div class="container">
      <h1>{staff.title}</h1>
    </div>
  </section>

  <section class="content">
    <div class="container">
      <div class="info-box info-box-accent mb-3">
        <h3>{i18n.staffingUpdate.title}</h3>
        <p>{i18n.staffingUpdate.text}</p>
      </div>

      <h2>{staff.physicians}</h2>
      <div class="staff-grid">
        <div class="staff-card card">
          <div class="staff-header">
            <div class="staff-avatar">SS</div>
            <div class="staff-title">
              <h3>{staff.members.sinanSaid.name}</h3>
              <span class="role">{staff.members.sinanSaid.title}</span>
            </div>
          </div>
          <div class="staff-body">
            <p class="specialty">{staff.members.sinanSaid.specialty}</p>
            <p>{staff.members.sinanSaid.bio}</p>
          </div>
        </div>

        <div class="staff-card card">
          <div class="staff-header">
            <div class="staff-avatar">JM</div>
            <div class="staff-title">
              <h3>{staff.members.janMikkelsen.name}</h3>
              <span class="role">{staff.members.janMikkelsen.title}</span>
            </div>
          </div>
          <div class="staff-body">
            <p class="specialty">{staff.members.janMikkelsen.specialty}</p>
            <p>{staff.members.janMikkelsen.bio}</p>
          </div>
        </div>
      </div>

      <h2 class="mt-3">{staff.supportStaff}</h2>
      <div class="staff-grid support-grid">
        <div class="staff-card card">
          <div class="staff-header">
            <div class="staff-avatar small">HH</div>
            <div class="staff-title">
              <h3>{staff.members.helleHansen.name}</h3>
              <span class="role">{staff.members.helleHansen.title}</span>
            </div>
          </div>
        </div>

        <div class="staff-card card">
          <div class="staff-header">
            <div class="staff-avatar small">LP</div>
            <div class="staff-title">
              <h3>{staff.members.lenePetersen.name}</h3>
              <span class="role">{staff.members.lenePetersen.title}</span>
            </div>
          </div>
          <div class="staff-body">
            <p>{staff.members.lenePetersen.bio}</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .page-hero {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    color: var(--white);
    padding: 4rem 0;
  }

  .page-hero h1 {
    color: var(--white);
    margin: 0;
  }

  .content {
    padding: 4rem 0;
  }

  .content h2 {
    margin-bottom: 1.5rem;
    color: var(--primary-dark);
  }

  .staff-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .support-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .staff-card {
    padding: 2rem;
  }

  .staff-header {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    margin-bottom: 1.5rem;
  }

  .staff-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    color: var(--white);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    flex-shrink: 0;
  }

  .staff-avatar.small {
    width: 60px;
    height: 60px;
    font-size: 1.25rem;
  }

  .staff-title h3 {
    margin: 0 0 0.25rem 0;
    font-size: 1.25rem;
  }

  .role {
    color: var(--primary);
    font-weight: 600;
    font-size: 0.95rem;
  }

  .staff-body {
    border-top: 1px solid rgba(var(--gray), 0.1);
    padding-top: 1rem;
  }

  .specialty {
    font-weight: 600;
    color: rgb(var(--gray));
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
  }

  .staff-body p:last-child {
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .staff-grid,
    .support-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
