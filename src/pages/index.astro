---
import BaseLayout from '../layouts/BaseLayout.astro';
import { i18n } from '../i18n';
import { CONTACT } from '../consts';

const treatments = i18n.treatments.categories;
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <h1>{i18n.site.title}</h1>
      <p class="hero-subtitle">{i18n.ui.heroSubtitle}</p>
      <p>{i18n.site.description}</p>
      <div class="hero-contact">
        <a href={`tel:${CONTACT.phone.replace(/\s/g, '')}`} class="btn btn-primary">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
          </svg>
          {i18n.common.call} {CONTACT.phone}
        </a>
        <a href="/kontakt" class="btn btn-secondary btn-white">
          {i18n.common.contactUs}
        </a>
      </div>
    </div>
  </section>

  <!-- Staffing Update -->
  <section class="staffing-update">
    <div class="container">
      <div class="info-box info-box-accent">
        <h3>{i18n.staffingUpdate.title}</h3>
        <p>{i18n.staffingUpdate.text}</p>
      </div>
    </div>
  </section>

  <!-- Quick Info Section -->
  <section class="quick-info">
    <div class="container">
      <div class="grid grid-3">
        <div class="card">
          <div class="card-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
          </div>
          <h3>{i18n.hours.phoneHours.title}</h3>
          <p><strong>{i18n.hours.phoneHours.weekdays}</strong></p>
          <p>{i18n.hours.phoneHours.morning}<br>{i18n.hours.phoneHours.afternoon}</p>
        </div>

        <div class="card">
          <div class="card-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
          </div>
          <h3>{i18n.common.address}</h3>
          <p><strong>{CONTACT.address.street}</strong></p>
          <p>{CONTACT.address.city}</p>
          <p class="text-muted" style="font-size: 0.9rem; margin-top: 0.5rem;">{i18n.ui.buildingName}</p>
        </div>

        <div class="card">
          <div class="card-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
          </svg>
          </div>
          <h3>{i18n.nav.contact}</h3>
          <p><strong>{i18n.common.phone}:</strong> <a href={`tel:${CONTACT.phone.replace(/\s/g, '')}`}>{CONTACT.phone}</a></p>
          <p><strong>{i18n.common.fax}:</strong> {CONTACT.fax}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- About Preview -->
  <section class="about-preview">
    <div class="container">
      <div class="about-content">
        <h2>{i18n.about.title}</h2>
        <p>{i18n.about.intro}</p>
        <p>{i18n.about.location.text}</p>
        <div class="about-features">
          <div class="feature">
            <span class="badge badge-accent">{i18n.ui.ddkmAccredited}</span>
          </div>
          <div class="feature">
            <span class="badge">{i18n.ui.insuranceAgreement}</span>
          </div>
        </div>
        <a href="/om-klinikken" class="btn btn-secondary">{i18n.common.readMore}</a>
      </div>
    </div>
  </section>

  <!-- Treatments Section -->
  <section class="treatments">
    <div class="container">
      <h2 class="text-center mb-3">{i18n.treatments.title}</h2>
      <p class="text-center text-muted mb-3">{i18n.treatments.intro}</p>

      <div class="grid grid-3">
        <a href={`/behandlinger/${treatments.knee.slug}`} class="treatment-card card card-link">
          <div class="treatment-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <circle cx="12" cy="8" r="3"></circle>
              <path d="M12 11v6"></path>
              <path d="M9 21l3-4 3 4"></path>
            </svg>
          </div>
          <h3>{treatments.knee.title}</h3>
          <p>{treatments.knee.description}</p>
          <span class="treatment-count">{Object.keys(treatments.knee.treatments).length} {i18n.ui.treatments.toLowerCase()}</span>
        </a>

        <a href={`/behandlinger/${treatments.foot.slug}`} class="treatment-card card card-link">
          <div class="treatment-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M4 16c0 2.21 1.79 4 4 4h8c2.21 0 4-1.79 4-4v-4c0-2.21-1.79-4-4-4H8c-2.21 0-4 1.79-4 4v4z"></path>
              <circle cx="8" cy="10" r="1"></circle>
              <circle cx="12" cy="9" r="1"></circle>
              <circle cx="16" cy="10" r="1"></circle>
            </svg>
          </div>
          <h3>{treatments.foot.title}</h3>
          <p>{treatments.foot.description}</p>
          <span class="treatment-count">{Object.keys(treatments.foot.treatments).length} {i18n.ui.treatments.toLowerCase()}</span>
        </a>

        <a href={`/behandlinger/${treatments.hand.slug}`} class="treatment-card card card-link">
          <div class="treatment-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M18 11V6a2 2 0 0 0-2-2v0a2 2 0 0 0-2 2v0"></path>
              <path d="M14 10V4a2 2 0 0 0-2-2v0a2 2 0 0 0-2 2v6"></path>
              <path d="M10 10.5V6a2 2 0 0 0-2-2v0a2 2 0 0 0-2 2v8"></path>
              <path d="M18 8a2 2 0 1 1 4 0v6a8 8 0 0 1-8 8h-2c-2.21 0-4.21-.9-5.66-2.34"></path>
              <path d="M6 14a2 2 0 1 0-4 0"></path>
            </svg>
          </div>
          <h3>{treatments.hand.title}</h3>
          <p>{treatments.hand.description}</p>
          <span class="treatment-count">{Object.keys(treatments.hand.treatments).length} {i18n.ui.treatments.toLowerCase()}</span>
        </a>

        <a href={`/behandlinger/${treatments.varicoseVeins.slug}`} class="treatment-card card card-link">
          <div class="treatment-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M12 2v20"></path>
              <path d="M8 6c0 4 4 6 4 10s-4 6-4 10"></path>
              <path d="M16 6c0 4-4 6-4 10s4 6 4 10"></path>
            </svg>
          </div>
          <h3>{treatments.varicoseVeins.title}</h3>
          <p>{treatments.varicoseVeins.description}</p>
        </a>

        <a href={`/behandlinger/${treatments.arthritis.slug}`} class="treatment-card card card-link">
          <div class="treatment-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <circle cx="12" cy="12" r="3"></circle>
              <path d="M12 2v4"></path>
              <path d="M12 18v4"></path>
              <path d="m4.93 4.93 2.83 2.83"></path>
              <path d="m16.24 16.24 2.83 2.83"></path>
              <path d="M2 12h4"></path>
              <path d="M18 12h4"></path>
              <path d="m4.93 19.07 2.83-2.83"></path>
              <path d="m16.24 7.76 2.83-2.83"></path>
            </svg>
          </div>
          <h3>{treatments.arthritis.title}</h3>
          <p>{treatments.arthritis.description}</p>
        </a>

        <a href={`/behandlinger/${treatments.arthrosamid.slug}`} class="treatment-card card card-link">
          <div class="treatment-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="m14.5 2-8.5 8.5c-.83.83-.83 2.17 0 3l4.5 4.5c.83.83 2.17.83 3 0l8.5-8.5v-7.5h-7.5z"></path>
              <path d="m20 2-8 8"></path>
            </svg>
          </div>
          <h3>{treatments.arthrosamid.title}</h3>
          <p>{treatments.arthrosamid.description}</p>
          <span class="badge badge-primary">{i18n.ui.newTreatment}</span>
        </a>
      </div>

      <div class="text-center mt-3">
        <a href="/behandlinger" class="btn btn-primary">{i18n.ui.seeAllTreatments}</a>
      </div>
    </div>
  </section>

  <!-- Patient Guides Preview -->
  <section class="patient-guides-preview">
    <div class="container">
      <h2 class="text-center mb-2">{i18n.patientGuides.title}</h2>
      <p class="text-center text-muted mb-3">{i18n.patientGuides.intro}</p>

      <div class="guides-grid">
        {Object.values(i18n.patientGuides.guides).slice(0, 6).map((guide) => (
          <a href="/patientvejledninger" class="guide-item">
            <span class="guide-title">{guide.title}</span>
            <span class="guide-arrow">â†’</span>
          </a>
        ))}
      </div>

      <div class="text-center mt-3">
        <a href="/patientvejledninger" class="btn btn-secondary">{i18n.ui.seeAllGuides}</a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta">
    <div class="container text-center">
      <h2>{i18n.ui.needAppointment}</h2>
      <p>{i18n.ui.needAppointmentText}</p>
      <div class="cta-buttons">
        <a href={`tel:${CONTACT.phone.replace(/\s/g, '')}`} class="btn btn-primary">
          {i18n.common.call} {CONTACT.phone}
        </a>
        <a href="/kontakt" class="btn btn-secondary">
          {i18n.common.sendMessage}
        </a>
      </div>
      <p class="cta-note">
        <strong>{i18n.ui.referralReminder}</strong> {i18n.ui.referralReminderText}
        <a href="/henvisning">{i18n.ui.readMoreReferral}</a>
      </p>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    background:
      /* Large organic blobs - different sizes to avoid repetition feel */
      radial-gradient(ellipse 80% 50% at 0% 100%, rgba(39, 174, 96, 0.2) 0%, transparent 50%),
      radial-gradient(ellipse 60% 40% at 100% 0%, rgba(41, 128, 185, 0.25) 0%, transparent 50%),
      radial-gradient(ellipse 40% 60% at 70% 70%, rgba(26, 95, 122, 0.3) 0%, transparent 40%),
      radial-gradient(ellipse 30% 40% at 20% 30%, rgba(255, 255, 255, 0.05) 0%, transparent 40%),
      /* Base gradient */
      linear-gradient(
        135deg,
        #1a5f7a 0%,
        #0d3d4d 100%
      );
    color: var(--white);
    padding: 5rem 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    /* Abstract non-repeating pattern using multiple noise-like layers */
    background:
      /* Scattered dots - white, various sizes and opacities */
      radial-gradient(circle at 15% 25%, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.1) 2px, transparent 2px),
      radial-gradient(circle at 85% 15%, rgba(255,255,255,0.08) 0%, rgba(255,255,255,0.08) 3px, transparent 3px),
      radial-gradient(circle at 45% 80%, rgba(255,255,255,0.09) 0%, rgba(255,255,255,0.09) 2px, transparent 2px),
      radial-gradient(circle at 70% 45%, rgba(255,255,255,0.07) 0%, rgba(255,255,255,0.07) 4px, transparent 4px),
      radial-gradient(circle at 25% 65%, rgba(255,255,255,0.08) 0%, rgba(255,255,255,0.08) 3px, transparent 3px),
      radial-gradient(circle at 90% 75%, rgba(255,255,255,0.09) 0%, rgba(255,255,255,0.09) 2px, transparent 2px),
      radial-gradient(circle at 5% 90%, rgba(255,255,255,0.07) 0%, rgba(255,255,255,0.07) 3px, transparent 3px),
      radial-gradient(circle at 60% 20%, rgba(255,255,255,0.08) 0%, rgba(255,255,255,0.08) 2px, transparent 2px),
      radial-gradient(circle at 35% 45%, rgba(255,255,255,0.06) 0%, rgba(255,255,255,0.06) 5px, transparent 5px),
      radial-gradient(circle at 80% 60%, rgba(255,255,255,0.07) 0%, rgba(255,255,255,0.07) 3px, transparent 3px),
      /* More scattered dots */
      radial-gradient(circle at 3% 40%, rgba(255,255,255,0.08) 0%, rgba(255,255,255,0.08) 2px, transparent 2px),
      radial-gradient(circle at 97% 55%, rgba(255,255,255,0.07) 0%, rgba(255,255,255,0.07) 3px, transparent 3px),
      radial-gradient(circle at 22% 12%, rgba(255,255,255,0.09) 0%, rgba(255,255,255,0.09) 2px, transparent 2px),
      radial-gradient(circle at 78% 88%, rgba(255,255,255,0.06) 0%, rgba(255,255,255,0.06) 4px, transparent 4px),
      radial-gradient(circle at 52% 35%, rgba(255,255,255,0.05) 0%, rgba(255,255,255,0.05) 3px, transparent 3px),
      radial-gradient(circle at 33% 92%, rgba(255,255,255,0.08) 0%, rgba(255,255,255,0.08) 2px, transparent 2px),
      radial-gradient(circle at 67% 8%, rgba(255,255,255,0.07) 0%, rgba(255,255,255,0.07) 3px, transparent 3px),
      radial-gradient(circle at 12% 72%, rgba(255,255,255,0.06) 0%, rgba(255,255,255,0.06) 4px, transparent 4px),
      radial-gradient(circle at 88% 33%, rgba(255,255,255,0.08) 0%, rgba(255,255,255,0.08) 2px, transparent 2px),
      radial-gradient(circle at 42% 58%, rgba(255,255,255,0.05) 0%, rgba(255,255,255,0.05) 5px, transparent 5px),
      /* Colored accent dots */
      radial-gradient(circle at 10% 50%, rgba(39, 174, 96, 0.15) 0%, rgba(39, 174, 96, 0.15) 5px, transparent 5px),
      radial-gradient(circle at 95% 40%, rgba(41, 128, 185, 0.15) 0%, rgba(41, 128, 185, 0.15) 4px, transparent 4px),
      radial-gradient(circle at 30% 15%, rgba(39, 174, 96, 0.12) 0%, rgba(39, 174, 96, 0.12) 3px, transparent 3px),
      radial-gradient(circle at 75% 70%, rgba(41, 128, 185, 0.12) 0%, rgba(41, 128, 185, 0.12) 4px, transparent 4px),
      radial-gradient(circle at 55% 95%, rgba(39, 174, 96, 0.1) 0%, rgba(39, 174, 96, 0.1) 3px, transparent 3px),
      radial-gradient(circle at 8% 20%, rgba(41, 128, 185, 0.1) 0%, rgba(41, 128, 185, 0.1) 5px, transparent 5px),
      /* Soft curved lines */
      radial-gradient(ellipse 200% 100% at 50% 150%, transparent 70%, rgba(255,255,255,0.04) 70%, rgba(255,255,255,0.04) 70.5%, transparent 70.5%),
      radial-gradient(ellipse 150% 80% at 100% 50%, transparent 60%, rgba(255,255,255,0.03) 60%, rgba(255,255,255,0.03) 60.3%, transparent 60.3%),
      radial-gradient(ellipse 180% 90% at 0% 30%, transparent 65%, rgba(255,255,255,0.025) 65%, rgba(255,255,255,0.025) 65.4%, transparent 65.4%);
    pointer-events: none;
  }

  .hero::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    /* Additional larger glowing elements */
    background:
      radial-gradient(circle at 5% 15%, rgba(255,255,255,0.06) 0%, transparent 15%),
      radial-gradient(circle at 92% 85%, rgba(255,255,255,0.05) 0%, transparent 12%),
      radial-gradient(circle at 50% 5%, rgba(255,255,255,0.04) 0%, transparent 20%),
      radial-gradient(circle at 20% 95%, rgba(39, 174, 96, 0.08) 0%, transparent 18%),
      radial-gradient(circle at 85% 25%, rgba(41, 128, 185, 0.08) 0%, transparent 15%);
    pointer-events: none;
  }

  .hero > .container {
    position: relative;
    z-index: 1;
  }

  .hero h1 {
    color: var(--white);
    font-size: 2.75rem;
    margin-bottom: 0.5rem;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    opacity: 0.9;
    margin-bottom: 1rem;
  }

  .hero p {
    font-size: 1.1rem;
    opacity: 0.95;
    max-width: 600px;
    margin: 0 auto 2rem;
  }

  .hero-contact {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-white {
    border-color: var(--white);
    color: var(--white);
  }

  .btn-white:hover {
    background-color: var(--white);
    color: var(--primary);
  }

  .staffing-update {
    padding: 2rem 0;
    background: rgba(var(--gray-light), 0.5);
  }

  .staffing-update .info-box {
    margin: 0;
  }

  .staffing-update h3 {
    margin-bottom: 0.5rem;
    color: var(--primary-dark);
  }

  .staffing-update p {
    margin: 0;
  }

  .quick-info {
    padding: 4rem 0;
  }

  .quick-info .card {
    text-align: center;
    padding: 2rem 1.5rem;
  }

  .card-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    border-radius: 16px;
    background-color: rgba(26, 95, 122, 0.1);
    color: var(--primary);
    margin-bottom: 1rem;
  }

  .quick-info h3 {
    font-size: 1.1rem;
    margin-bottom: 0.75rem;
  }

  .quick-info p {
    margin-bottom: 0.25rem;
    font-size: 0.95rem;
  }

  .about-preview {
    padding: 4rem 0;
    background: rgba(var(--gray-light), 0.3);
  }

  .about-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .about-features {
    display: flex;
    gap: 1rem;
    margin: 1.5rem 0;
    flex-wrap: wrap;
  }

  .treatments {
    padding: 5rem 0;
  }

  .treatment-card {
    text-align: center;
    padding: 2rem 1.5rem;
  }

  .treatment-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    border-radius: 20px;
    background: linear-gradient(135deg, rgba(26, 95, 122, 0.1) 0%, rgba(26, 95, 122, 0.05) 100%);
    color: var(--primary);
    margin-bottom: 1rem;
  }

  .treatment-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .treatment-card p {
    font-size: 0.9rem;
    color: rgb(var(--gray));
    margin-bottom: 0.75rem;
  }

  .treatment-count {
    font-size: 0.85rem;
    color: var(--primary);
    font-weight: 500;
  }

  .patient-guides-preview {
    padding: 5rem 0;
    background: rgba(var(--gray-light), 0.3);
  }

  .guides-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .guide-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.25rem;
    background: var(--white);
    border-radius: 8px;
    text-decoration: none;
    color: rgb(var(--gray-dark));
    transition: all 0.2s ease;
    box-shadow: var(--box-shadow);
  }

  .guide-item:hover {
    background: var(--primary);
    color: var(--white);
    transform: translateX(4px);
  }

  .guide-title {
    font-weight: 500;
  }

  .guide-arrow {
    opacity: 0.5;
    transition: opacity 0.2s ease;
  }

  .guide-item:hover .guide-arrow {
    opacity: 1;
  }

  .cta {
    padding: 5rem 0;
    background: var(--primary);
    color: var(--white);
  }

  .cta h2 {
    color: var(--white);
    margin-bottom: 1rem;
  }

  .cta p {
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto 2rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .cta .btn-secondary {
    border-color: var(--white);
    color: var(--white);
  }

  .cta .btn-secondary:hover {
    background-color: var(--white);
    color: var(--primary);
  }

  .cta-note {
    font-size: 0.9rem;
    opacity: 0.85;
    max-width: 500px;
    margin: 0 auto;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 8px;
  }

  .cta-note a {
    color: var(--white);
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 3rem 0;
    }

    .hero h1 {
      font-size: 2rem;
    }

