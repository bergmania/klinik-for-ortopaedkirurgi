---
import { i18n } from '../i18n';
import { CONTACT } from '../consts';

const currentYear = new Date().getFullYear();
---

<footer>
  <div class="container">
    <div class="footer-grid">
      <div class="footer-section">
        <h3>{i18n.site.title}</h3>
        <p class="footer-subtitle">ved Sinan Said & Jan Beck Mikkelsen</p>
        <p class="footer-description">Speciallægepraksis i ortopædkirurgi</p>
        <div class="accreditation">
          <span class="badge badge-accent">DDKM Akkrediteret</span>
        </div>
      </div>

      <div class="footer-section">
        <h4>Kontakt</h4>
        <ul class="footer-list">
          <li>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
            <a href={`tel:${CONTACT.phone.replace(/\s/g, '')}`}>{CONTACT.phone}</a>
          </li>
          <li>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            <span>Fax: {CONTACT.fax}</span>
          </li>
          <li>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            <span>{CONTACT.address.street}<br>{CONTACT.address.city}</span>
          </li>
        </ul>
      </div>

      <div class="footer-section">
        <h4>{i18n.hours.title}</h4>
        <ul class="footer-list">
          <li>
            <strong>{i18n.hours.phoneHours.title}</strong><br>
            {i18n.hours.phoneHours.weekdays}<br>
            {i18n.hours.phoneHours.morning}<br>
            {i18n.hours.phoneHours.afternoon}
          </li>
          <li>
            <strong>{i18n.hours.consultationHours.title}</strong><br>
            {i18n.hours.consultationHours.weekdays}<br>
            {i18n.hours.consultationHours.note}
          </li>
        </ul>
      </div>

      <div class="footer-section">
        <h4>{i18n.holidays.title}</h4>
        <ul class="footer-list holidays">
          <li>
            <strong>{i18n.holidays.summer.label}</strong><br>
            {i18n.holidays.summer.dates}
          </li>
          <li>
            <strong>{i18n.holidays.autumn.label}</strong><br>
            {i18n.holidays.autumn.dates}
          </li>
          <li>
            <strong>{i18n.holidays.winter.label}</strong><br>
            {i18n.holidays.winter.dates}
          </li>
        </ul>
      </div>
    </div>

    <div class="footer-bottom">
      <div class="footer-info">
        <span>Lokalisationsnummer: {CONTACT.locationNumber}</span>
        <span>Ydernummer: {CONTACT.providerNumber}</span>
      </div>
      <div class="footer-links">
        <a href="/cookie-og-privatlivspolitik" class="footer-link">{i18n.footer.cookiePolicy}</a>
        <span class="footer-divider">|</span>
        <a href="/tilsynsrapport-2014.pdf" target="_blank" rel="noopener" class="footer-link">{i18n.documents.supervisionReport}</a>
        <span class="footer-divider">|</span>
        <a href="/behandling-af-personoplysninger.pdf" target="_blank" rel="noopener" class="footer-link">{i18n.documents.personalDataPolicy}</a>
      </div>
      <p class="copyright">
        &copy; {currentYear} {i18n.footer.copyright}. {i18n.footer.allRightsReserved}.
      </p>
    </div>
  </div>
</footer>

<style>
  footer {
    background: rgb(var(--gray-dark));
    color: var(--white);
    padding: 4rem 0 2rem;
    margin-top: auto;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .footer-section h3 {
    color: var(--white);
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .footer-section h4 {
    color: var(--white);
    font-size: 1rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--primary);
  }

  .footer-subtitle {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 0.5rem;
  }

  .footer-description {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 1rem;
  }

  .accreditation {
    margin-top: 1rem;
  }

  .footer-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-list li {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.5;
  }

  .footer-list li svg {
    flex-shrink: 0;
    margin-top: 0.25rem;
    opacity: 0.7;
  }

  .footer-list.holidays li {
    display: block;
  }

  .footer-list a {
    color: var(--white);
    text-decoration: none;
  }

  .footer-list a:hover {
    color: var(--primary-light);
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 2rem;
    text-align: center;
  }

  .footer-info {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 1rem;
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .copyright {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
  }

  .footer-links {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .footer-link {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-link:hover {
    color: var(--white);
    text-decoration: underline;
  }

  .footer-divider {
    color: rgba(255, 255, 255, 0.3);
    font-size: 0.8rem;
  }

  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    footer {
      padding: 3rem 0 2rem;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-info {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
