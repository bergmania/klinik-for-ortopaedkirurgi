---
import { i18n } from '../i18n';
import { CONTACT } from '../consts';

const pathname = Astro.url.pathname;

const navItems = [
  { href: '/', label: i18n.nav.home },
  { href: '/om-klinikken', label: i18n.nav.about },
  { href: '/ansatte', label: i18n.nav.staff },
  { href: '/behandlinger', label: i18n.nav.treatments },
  { href: '/patientvejledninger', label: i18n.nav.patientGuides },
  { href: '/henvisning', label: i18n.nav.referral },
  { href: '/kontakt', label: i18n.nav.contact },
];

function isActive(href: string): boolean {
  if (href === '/') {
    return pathname === '/';
  }
  return pathname.startsWith(href);
}
---

<header>
  <div class="header-top">
    <div class="container flex-between">
      <div class="contact-info">
        <a href={`tel:${CONTACT.phone.replace(/\s/g, '')}`} class="phone-link-small">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
          </svg>
          {CONTACT.phone}
        </a>
      </div>
      <div class="hours-info">
        <span>{i18n.hours.phoneHours.title}: {i18n.hours.phoneHours.weekdays} {i18n.hours.phoneHours.morning}, {i18n.hours.phoneHours.afternoon}</span>
      </div>
    </div>
  </div>

  <div class="header-main">
    <div class="container">
      <nav>
        <a href="/" class="logo">
          <span class="logo-text">{i18n.site.title}</span>
          <span class="logo-subtitle">ved Sinan Said & Jan Beck Mikkelsen</span>
        </a>

        <button class="mobile-menu-toggle" aria-label="Ã…bn menu" aria-expanded="false">
          <svg class="menu-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="3" y1="12" x2="21" y2="12"></line>
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="18" x2="21" y2="18"></line>
          </svg>
          <svg class="close-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>

        <div class="nav-links">
          {navItems.map(item => (
            <a
              href={item.href}
              class:list={['nav-link', { active: isActive(item.href) }]}
            >
              {item.label}
            </a>
          ))}
        </div>
      </nav>
    </div>
  </div>
</header>

<script>
  const menuToggle = document.querySelector('.mobile-menu-toggle');
  const navLinks = document.querySelector('.nav-links');

  menuToggle?.addEventListener('click', () => {
    const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
    menuToggle.setAttribute('aria-expanded', (!isExpanded).toString());
    navLinks?.classList.toggle('open');
  });
</script>

<style>
  header {
    position: sticky;
    top: 0;
    z-index: 1000;
    background: var(--white);
    box-shadow: var(--box-shadow);
  }

  .header-top {
    background: var(--primary);
    color: var(--white);
    padding: 0.5rem 0;
    font-size: 0.875rem;
  }

  .header-top .flex-between {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .contact-info {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .phone-link-small {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--white);
    font-weight: 600;
    text-decoration: none;
  }

  .phone-link-small:hover {
    opacity: 0.9;
    color: var(--white);
  }

  .hours-info {
    color: rgba(255, 255, 255, 0.9);
  }

  .header-main {
    padding: 1rem 0;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .logo {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: rgb(var(--black));
  }

  .logo-text {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--primary);
    line-height: 1.2;
  }

  .logo-subtitle {
    font-size: 0.75rem;
    color: rgb(var(--gray));
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .nav-link {
    padding: 0.5rem 0.75rem;
    color: rgb(var(--gray-dark));
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .nav-link:hover {
    background-color: rgba(var(--gray-light), 0.8);
    color: var(--primary);
  }

  .nav-link.active {
    background-color: var(--primary);
    color: var(--white);
  }

  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    color: rgb(var(--gray-dark));
  }

  .mobile-menu-toggle .close-icon {
    display: none;
  }

  .mobile-menu-toggle[aria-expanded="true"] .menu-icon {
    display: none;
  }

  .mobile-menu-toggle[aria-expanded="true"] .close-icon {
    display: block;
  }

  @media (max-width: 1024px) {
    .hours-info {
      display: none;
    }

    .nav-link {
      padding: 0.5rem 0.5rem;
      font-size: 0.85rem;
    }
  }

  @media (max-width: 768px) {
    .header-top {
      display: none;
    }

    .mobile-menu-toggle {
      display: block;
    }

    .nav-links {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: var(--white);
      flex-direction: column;
      padding: 1rem;
      box-shadow: var(--box-shadow);
      gap: 0.5rem;
    }

    .nav-links.open {
      display: flex;
    }

    .nav-link {
      width: 100%;
      padding: 0.75rem 1rem;
    }

    .header-main {
      position: relative;
    }
  }
</style>
